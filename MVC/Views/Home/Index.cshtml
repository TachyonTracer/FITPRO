@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FitPro Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link href="https://kendo.cdn.telerik.com/themes/6.7.0/default/default-main.css" rel="stylesheet">
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/kendo.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/Instructor/Dashboard.css")" asp-append-version="true">
</head>

<body>
    <!-- Header with Logo -->
    <div class="header">
        <div class="logo-container">
            <a href="#" class="logo">
                <img src="~/logo/fitProLogo.png" alt="">
            </a>
        </div>

        <div class="user-profile-container">
            <div class="user-profile">
                <div class="user-avatar">AM</div>
                <div class="user-name">Arpit Mehta</div>
            </div>
            <div class="profile-dropdown">
                <a href="#" onclick="showProfileDrawer()">Update Profile</a>
                <a href="#" onclick="showLogoutConfirmation()">Logout</a>
            </div>
        </div>
    </div>

    <!-- Main Navigation TabStrip -->
    <div id="mainTabstrip">
        <ul>
            <li class="k-active">All Classes</li>
            <li>My Classes</li>
            <li>Progress</li>
            <li>Health</li>
            <li>Settings</li>
        </ul>
        <div>
            <!-- Dashboard Content -->
            <div class="content-area">
                <!-- Dashboard Content -->
                <div class="content-area">
                    <div class="container-fluid dashboard-content">
                        <div class="row g-0 w-100">
                            <!-- Class Overview -->
                            <div class="col-md-4 mb-4">
                                <div class="card dashboard-card h-100 mx-2">
                                    <div class="card-body">
                                        <h5 class="card-title">Class Overview</h5>
                                        <div class="row">
                                            <div class="col-6 text-center">
                                                <div class="stat-value">12</div>
                                                <small>Total Classes</small>
                                            </div>
                                            <div class="col-6 text-center">
                                                <div class="stat-value">8</div>
                                                <small>Upcoming Classes</small>
                                            </div>
                                        </div>
                                        <canvas id="classTypeChart" style="max-height: 250px;"></canvas>
                                    </div>
                                </div>
                            </div>

                            <!-- Student Engagement -->
                            <div class="col-md-4 mb-4">
                                <div class="card dashboard-card h-100 mx-2">
                                    <div class="card-body">
                                        <h5 class="card-title">Student Engagement</h5>
                                        <div class="row">
                                            <div class="col-6 text-center">
                                                <div class="stat-value">142</div>
                                                <small>Total Students</small>
                                            </div>
                                            <div class="col-6 text-center">
                                                <div class="stat-value">87%</div>
                                                <small>Retention Rate</small>
                                            </div>
                                        </div>
                                        <canvas id="studentEngagementChart" class="mt-3"></canvas>
                                    </div>
                                </div>
                            </div>

                            <!-- Revenue & Performance -->
                            <div class="col-md-4 mb-4">
                                <div class="card dashboard-card h-100 mx-2">
                                    <div class="card-body">
                                        <h5 class="card-title">Revenue & Performance</h5>
                                        <div class="row">
                                            <div class="col-6 text-center">
                                                <div class="stat-value">$4,250</div>
                                                <small>Total Revenue</small>
                                            </div>
                                            <div class="col-6 text-center">
                                                <div class="stat-value">4.8</div>
                                                <small>Average Rating</small>
                                            </div>
                                        </div>

                                        <canvas id="revenueChart" class="mt-3"></canvas>
                                    </div>
                                </div>
                            </div>

                            <!-- Upcoming Classes -->
                            <div class="col-md-8 mb-4">
                                <div class="card dashboard-card mx-2">
                                    <div class="card-body">
                                        <h5 class="card-title">Upcoming Classes</h5>
                                        <div class="table-responsive">
                                            <table class="table table-dark table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Class Name</th>
                                                        <th>Date</th>
                                                        <th>Time</th>
                                                        <th>Students</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Advanced Yoga</td>
                                                        <td>April 15, 2025</td>
                                                        <td>08:00 AM</td>
                                                        <td>12/15</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-primary">Details</button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>HIIT Fitness</td>
                                                        <td>April 16, 2025</td>
                                                        <td>06:00 PM</td>
                                                        <td>8/12</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-primary">Details</button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Pilates Workshop</td>
                                                        <td>April 17, 2025</td>
                                                        <td>10:00 AM</td>
                                                        <td>15/20</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-primary">Details</button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Strength Training</td>
                                                        <td>April 18, 2025</td>
                                                        <td>04:30 PM</td>
                                                        <td>10/15</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-primary">Details</button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Meditation Class</td>
                                                        <td>April 19, 2025</td>
                                                        <td>09:00 AM</td>
                                                        <td>18/20</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-primary">Details</button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Actions -->
                            <div class="col-md-4 mb-4">
                                <div class="card dashboard-card mx-2">
                                    <div class="card-body">
                                        <h5 class="card-title">Quick Actions</h5>
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-primary mb-2">Create New Class</button>
                                            <button class="btn btn-primary mb-2">Manage Schedule</button>
                                            <button class="btn btn-primary mb-2">View Student Feedback</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
        <div>
            <!-- Classes Content -->
            <div class="content-area">
                <div class="container" id="myClasses">
                    <h2>Classes Content-></h2>
                    <p>This would be the classes management section.</p>
                </div>
            </div>
        </div>
        <div>
            <!-- Progress Content -->
            <div class="content-area">
                <div class="container">
                    <h2>Progress Tracking</h2>
                    <p>This would be the progress tracking section.</p>
                </div>
            </div>
        </div>
        <div>
            <!-- Health Content -->
            <div class="content-area">
                <div class="container">
                    <h2>Health Metrics</h2>
                    <p>This would be the health metrics section.</p>
                </div>
            </div>
        </div>
        <div>
            <!-- Settings Content -->
            <div class="content-area">
                <div class="container">
                    <h2>Settings</h2>
                    <p>This would be the settings section.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Kendo Drawer for Update Profile -->
    <div id="profileDrawer"></div>

    <!-- Logout Confirmation Dialog -->
    <div id="logoutDialog"></div>
    <script src="@Url.Content("~/js/Instructor/Dashboard.js")" asp-append-version="true"></script>
</body>

</html>