@{
    Layout=null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FitPro Dashboard</title>
    

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @* SignalR JavaScript *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://kendo.cdn.telerik.com/themes/6.7.0/default/default-main.css" rel="stylesheet">
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/kendo.all.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/Admin/Index.css")" asp-append-version="true">
    <link rel="stylesheet" href="@Url.Content("/css/Admin/PartialVerifiedInstructor.css")" asp-append-version="true">
    <script src="@Url.Content("~/js/Admin/Index.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/Admin/PartialVerifiedInstructor.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/Admin/PartialApprovedInstructor.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/Admin/PartialUser.js")" asp-append-version="true"></script>
</head>
<body>
    <!-- Header with Logo -->
    <div class="header">
        <div class="logo-container">
            <a href="#" class="logo">
                <img src="~/fitProLogo.png" alt="Fitpro Logo">
            </a>
        </div>
        
        
        <div class="header_content_Wraper">     

            @* *** Notification Part Starts *** *@

                <!-- Notification Bell Icon -->
                <div class="position-relative d-inline-block notification-bell" style="margin-right: 15px; margin-top: 5px;">
                    <button class="btn btn-outline-light position-relative" onclick="openNotifications()">
                        <i class="fas fa-bell"></i>
                        <span id="notificationCount"
                            class="badge bg-danger position-absolute top-0 start-100 translate-middle"></span>
                    </button>

                    <!-- Notifications Dropdown -->
                    <div id="notificationDropdown" class="dropdown-menu shadow mt-2 p-0"
                        style="display: none; width: 320px; position: absolute;">

                        <!-- Scrollable Notification List -->
                        <ul id="notificationList" class="list-group list-group-flush">
                            <li class="list-group-item text-center text-muted">No new notifications</li>
                        </ul>

                        <!-- Mark all as read -->
                        <div class="p-2 border-top bg-light">
                            <button class="btn btn-sm btn-danger w-100" onclick="markAllAsRead()">Mark all as read</button>
                        </div>
                    </div>
                </div>

            @* *** Notification Part Ends *** *@
            

            <div class="user-profile-container">
                <div class="user-profile">
                    <div class="user-avatar">AD</div>
                    <div class="user-name">Welcome, Admin</div>
                </div>
                <div class="profile-dropdown">
                    <a href="#" onclick="showLogoutConfirmation()">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Navigation TabStrip -->
    <div id="mainTabstrip">
        <ul class="k-tabstrip-items">
            <li class="k-item k-active">Dashboard</li>
            <li class="k-item has-dropdown">
                Instructors
                <ul class="dropdown-menu">
                    <li class="dropdown-item" data-section="verified">Verified Instructors</li>
                    <li class="dropdown-item" data-section="approved">Approved Instructors</li>
                </ul>
            </li>
            <li class="k-item">Users</li>
            <li class="k-item">Classes</li>
        </ul>
        <div>
            <!-- Dashboard Content -->
            <div class="content-area">
                <div class="circle circle-1"></div>
                <div class="circle circle-2"></div>
                <h2 class="text-center mb-4">Dashboard Overview</h2>

                <!-- #region Quick Stats cards  ---->
                    <div class="stats-grid">
                        <div class="k-card">
                            <div class="k-card-header">Total Users</div>
                            <div class="k-card-body"><span id="total-users">0</span></div>
                            <div class="k-card-footer"><button class="k-button">View</button></div>
                        </div>
                        <div class="k-card">
                            <div class="k-card-header">Total Classes</div>
                            <div class="k-card-body"><span id="total-classes">0</span></div>
                            <div class="k-card-footer"><button class="k-button">Monitor</button></div>
                        </div>
                        <div class="k-card">
                            <div class="k-card-header">Active Instructors</div>
                            <div class="k-card-body"><span id="active-instructors">0</span></div>
                            <div class="k-card-footer"><button class="k-button">Details</button></div>
                        </div>
                        <div class="k-card">
                            <div class="k-card-header">Revenue (Month)</div>
                            <div class="k-card-body"><span id="revenue">â‚¹0</span></div>
                            <div class="k-card-footer"><button class="k-button">Report</button></div>
                        </div>
                    </div>
                <!-- #endregion -->


                <!-- Charts Section -->
                    <!-- Charts Section -->
                    <div class="charts-grid">
                        <div class="chart-container k-chart">
                            <h3>User Activity (Last 7 Days)</h3>
                            <canvas id="activityChart"></canvas>
                        </div>
                        <div class="chart-container k-chart">
                            <h3>User Engagement</h3>
                            <canvas id="engagementChart"></canvas>
                        </div>
                    </div>

                <!-- #endregion -->

                

                    <!-- Top Specializations Chart -->
                    <div class="chart-container k-chart full-width">
                        <h3>Top 10 Specializations</h3>
                        <canvas id="specializationChart"></canvas>
                    </div>

                    <!-- Recent Activity & Tasks -->
                    <div class="activity-task-grid">
                        <div class="k-card activity-log">
                            <div class="k-card-header">Recent Activity</div>
                            <div class="k-card-body" id="activity-log">
                                <ul>
                                    <li>User John subscribed to Premium - 10:45 AM</li>
                                    <li>Class "Yoga Flow" started - 9:30 AM</li>
                                    <li>Instructor Jane updated profile - 8:15 AM</li>
                                </ul>
                            </div>
                        </div>
                        <div class="k-card task-list">
                            <div class="k-card-header">Tasks</div>
                            <div class="k-card-body" id="task-list">
                                <ul>
                                    <li><input type="checkbox"> Approve new instructor</li>
                                    <li><input type="checkbox"> Review class feedback</li>
                                    <li><input type="checkbox" checked> Update billing report</li>
                                </ul>
                                <button class="k-button" id="add-task">Add Task</button>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
        <div>
            <!-- Instructor Content -->
            <div class="content-area">
                <div class="container" id="instructors">
                    <div class="circle circle-1"></div>
                    <div class="circle circle-2"></div>
                    <div class="sub-content" id="verified-instructors">
                        @Html.Partial("~/Views/Admin/PartialVerifiedInstructor.cshtml")
                    </div>
                    <div class="sub-content" id="approved-instructors" style="display: none;">
                        @Html.Partial("~/Views/Admin/PartialApprovedInstructor.cshtml")
                    </div>
                </div>
            </div>
        </div>
        <div>
            <!-- Users Content -->
            <div class="content-area">
                <div class="container">
                    <div class="circle circle-1"></div>
                    <div class="circle circle-2"></div>
                    @Html.Partial("~/Views/Admin/PartialUser.cshtml")
                </div>
            </div>
        </div>
        <div>
            <!-- Classes Content -->
            <div class="content-area" id="Classes">
                <!-- Background elements -->
                <div class="circle circle-1"></div>
                <div class="circle circle-2"></div>

                <div class="container mt-1">
                    <h2 class="text-center mb-4">FitPro Classes</h2>
                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <input type="text" id="searchText" class="form-control" style="color: white;" placeholder="Search by class name or city">
                        </div>
                        <div class="col-md-3">
                            <select id="type" class="form-control transparent-select">
                                <option value="">All Types</option>
                                <option value="In-Person">In-Person</option>
                                <option value="Online">Online</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="level" class="form-control transparent-select">
                                <option value="">All Levels</option>
                                <option value="Beginner">Beginner</option>
                                <option value="Intermediate">Intermediate</option>
                                <option value="Advanced">Advanced</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" id="filterBtn">Apply Filters</button>
                        </div>
                    </div>

                    <div id="classList" class="row">
                      
                        <!-- Available classes will be dynamically added here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Logout Confirmation Dialog -->
    <div id="logoutDialog"></div>
    
</body>
</html>