<div class="approved-instructor-container">
    <div class="main-content instructor-section">
        <div class="container-fluid">
            <div class="row">
                <!-- Left Panel (25%) - User Names -->
                <div class="col-md-3 p-3 bg-light" >
                    <h5 class="text-primary mb-3">Users</h5>
                    <div class="names-list" style="margin-top: 30px;">
                        <ul class="list-group" id="names"></ul>
                    </div>
                </div>

                <!-- Right Panel (75%) - User Details -->
                <div class="col-md-9 p-1  position-relative " >
                    <div class="circle circle-one"></div>
                    <div class="circle circle-two"></div>
                    <div id="default-message" class="text-center text-muted mt-5">
                        <h1>Select a User</h1>
                        <p class="text-secondary">Choose a name from the list to see more information</p>
                    </div>
                    <div id="details" class="d-none details-card">
                        <!-- Personal Information Section -->
                        <div class="details-section">
                            <h5>Personal Information</h5>
                            <div class="row personal-info-row">
                                <div class="col-md-8 personal-info-details">
                                    <div class="personal-info-column">
                                        <div class="detail-item"><strong>Name:</strong> <span id="userName"></span></div>
                                        <div class="detail-item"><strong>Email:</strong> <span id="email"></span></div>
                                        <div class="detail-item"><strong>Mobile:</strong> <span id="mobile"></span></div>
                                        <div class="detail-item"><strong>Gender:</strong> <span id="gender"></span></div>
                                        <div class="detail-item"><strong>Date of Birth:</strong> <span id="dob"></span></div>
                                        <div class="detail-item"><strong>Status:</strong> <span id="status"></span></div>
                                        <div class="detail-item"><strong>Activated On:</strong> <span id="activatedOn"></span></div>
                                    </div>
                                </div>
                                <div class="col-md-4 profile-image-container">
                                    <img id="profile-image" class="profile-image" src="" alt="Profile Image" >
                                </div>
                            </div>
                        </div>

                        <!-- Health Information Section -->
                        <div class="details-section">
                            <h5>Health Information</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-item"><strong>Height:</strong> <span id="height"></span></div>
                                    <div class="detail-item"><strong>Weight:</strong> <span id="weight"></span></div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-item"><strong>Goal:</strong> <span id="goal"></span></div>
                                    <div class="detail-item"><strong>Medical Condition:</strong> <span id="medicalCondition"></span></div>
                                </div>
                            </div>
                        </div>

                        <!-- Account Status Section -->
                        <div class="details-section">
                            <h5>Account Status</h5>
                            <div class="d-flex gap-3">
                                <button id="approve-btn" class="btn btn-warning"
                                    onclick="suspendUser()">Suspend</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>