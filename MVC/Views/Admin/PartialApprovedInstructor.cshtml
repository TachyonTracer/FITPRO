<div class="approved-instructor-container">
    <div class="main-content instructor-section">
        <div class="container-fluid">
            <div class="row">
                <!-- Left Panel (25%) - Instructor Names -->
                    <div class="col-md-3 p-3 bg-light">
                        <h5 class="text-primary mb-3">Approved Instructors</h5>
                        <div class="names-list">
                            <ul class="list-group" id="approved-instructor-names"></ul>
                        </div>
                    </div>

                    <!-- Right Panel (75%) - Instructor Details -->
                    <div class="col-md-9 p-1 position-relative">
                        <div class="circle circle-one"></div>
                        <div class="circle circle-two"></div>
                        <div id="approved-default-message" class="text-center text-muted mt-5">
                            <h4>Select an instructor to view details</h4>
                            <p class="text-secondary">Choose a name from the list to see more information</p>
                        </div>
                        <div id="approved-details" class="d-none details-card">
                            <!-- Personal Information Section -->
                            <div class="details-section">
                                <h5>Personal Information</h5>
                                <div class="row personal-info-row">
                                    <div class="col-md-8 personal-info-details">
                                        <div class="personal-info-column">
                                            <div class="detail-item"><strong>Name:</strong> <span id="approved-name"></span></div>
                                            <div class="detail-item"><strong>Email:</strong> <span id="approved-email"></span></div>
                                            <div class="detail-item"><strong>Mobile:</strong> <span id="approved-phone"></span></div>
                                            <div class="detail-item"><strong>Gender:</strong> <span id="approved-gender"></span></div>
                                            <div class="detail-item"><strong>Date of Birth:</strong> <span id="approved-dob"></span></div>
                                            <div class="detail-item"><strong>Association:</strong> <span id="approved-association"></span></div>
                                            <div class="detail-item"><strong>Status:</strong> <span id="approved-status"></span></div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 profile-image-container">
                                        <img id="approved-profile-image" class="profile-image" src="" alt="Profile Image"
                                            onerror="handleImageError(this)">
                                    </div>
                                </div>
                            </div>

                            <!-- Professional Information Section -->
                            <div class="details-section">
                                <h5>Professional Details</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="detail-item"><strong>Specialization:</strong><span id="approved-specialization"></span></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="detail-item"><strong>Certifications:</strong><span id="approved-certifications"></span></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Documents Section -->
                            <div class="details-section">
                                <h5>Documents</h5>
                                <div class="documents-grid" id="approved-documents-grid">
                                    <!-- Document cards will be populated dynamically -->
                                </div>
                            </div>

                            <!-- Approval Section -->
                            <div class="details-section">
                                <h5>Approval Status</h5>
                                <div class="d-flex gap-3">
                                    <button id="approve-btn" class="btn btn-warning" onclick="suspendInstructor()">Suspend</button>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

<!-- PDF Preview Modal -->
<div class="modal fade" id="approved-pdf-preview-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content" style="margin-top: 225px;">
            <div class="modal-header" >
                <h5 class="modal-title" id="approved-document-title">PDF Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div id="approved-pdf-viewer-modal" class="w-100 h-100">
                    <iframe src="" width="100%" height="100%" frameborder="0"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>