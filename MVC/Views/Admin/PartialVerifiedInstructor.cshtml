<div class="verified-instructor-container">
    <div class="main-content instructor-section">
        <div class="container-fluid">
            <div class="row">
                <!-- Left Panel (25%) - Instructor Names -->
                <div class="col-md-3 p-3 bg-light">
                    <h5 class="text-primary mb-3">Verified Instructors</h5>
                    <div class="names-list">
                        <ul class="list-group" id="verified-instructor-names"></ul>
                    </div>
                </div>

                <!-- Right Panel (75%) - Instructor Details -->
                <div class="col-md-9 p-1 position-relative">
                    <div class="circle circle-one"></div>
                    <div class="circle circle-two"></div>
                    <div id="verified-default-message" class="text-center text-muted mt-5">
                        <h4>Select an instructor to view details</h4>
                        <p class="text-secondary">Choose a name from the list to see more information</p>
                    </div>
                    <div id="verified-details" class="d-none details-card">
                        <!-- Personal Information Section -->
                        <div class="details-section">
                            <h5>Personal Information</h5>
                            <div class="row personal-info-row">
                                <div class="col-md-8 personal-info-details">
                                    <div class="personal-info-column">
                                        <div class="detail-item"><strong>Name:</strong> <span id="verified-name"></span></div>
                                        <div class="detail-item"><strong>Email:</strong> <span id="verified-email"></span></div>
                                        <div class="detail-item"><strong>Mobile:</strong> <span id="verified-phone"></span></div>
                                        <div class="detail-item"><strong>Gender:</strong> <span id="verified-gender"></span></div>
                                        <div class="detail-item"><strong>Date of Birth:</strong> <span id="verified-dob"></span></div>
                                        <div class="detail-item"><strong>Association:</strong> <span id="verified-association"></span></div>
                                        <div class="detail-item"><strong>Status:</strong> <span id="verified-status"></span></div>
                                    </div>
                                </div>
                                <div class="col-md-4 profile-image-container">
                                    <img id="verified-profile-image" class="profile-image" src="" alt="Profile Image"
                                        onerror="handleImageError(this)">
                                </div>
                            </div>
                        </div>

                        <!-- Professional Information Section -->
                        <div class="details-section">
                            <h5>Professional Details</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-item"><strong>Specialization:</strong><span id="verified-specialization"></span></div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-item"><strong>Certifications:</strong><span id="verified-certifications"></span></div>
                                </div>
                            </div>
                        </div>

                        <!-- Documents Section -->
                        <div class="details-section">
                            <h5>Documents</h5>
                            <div class="documents-grid" id="verified-documents-grid">
                                <!-- Document cards will be populated dynamically -->
                            </div>
                        </div>

                        <div class="details-section">
                            <h5>Approval Status</h5>
                            <div class="d-flex gap-3">
                                <button id="approve-btn" class="btn btn-success"
                                    onclick="approveInstructor()">Approve</button>
                                <button id="disapprove-btn" class="btn btn-danger"
                                    onclick="disapproveInstructor()">Disapprove</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- PDF Preview Modal -->
<div class="modal fade" id="verified-pdf-preview-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content" style="margin-top: 225px;">
            <div class="modal-header">
                <h5 class="modal-title" id="verified-document-title">PDF Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div id="verified-pdf-viewer-modal" class="w-100 h-100" style="height: 80vh;">
                    <iframe src="" width="100%" height="100%" frameborder="0" style="min-height: 75vh;"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>