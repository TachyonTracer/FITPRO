@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ForgotPassword - FitPro</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&family=Bebas+Neue&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="@Url.Content("/css/Auth/ForgotPassword.css")" asp-append-version="true">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>

  </style>
</head>

<body>
  <section class="container">
    <div class="gym-background">
      <div class="logo">
        <img src="~/Assets/logo.png" alt="FITPRO Logo">
      </div>
      <div class="gym-icon dumbbell-icon-1"></div>
      <div class="gym-icon dumbbell-icon-2"></div>
      <div class="gym-icon barbell-icon-1"></div>
      <div class="gym-icon barbell-icon-2"></div>
      <div class="gym-icon kettlebell-icon-1"></div>
      <div class="gym-icon kettlebell-icon-2"></div>
    </div>
    <div class="login-container">
      <div class="circle circle-one"></div>
      <div class="form-container">
        <h1 class="opacity">RESET PASSWORD</h1>
        <p class="tagline opacity">ENTER YOUR EMAIL TO RECEIVE OTP</p>
        <form>
          <label for="email" class="sr-only">Email</label>
          <input type="text" id="email" placeholder="EMAIL" required />

          <button id="submitter-button" class="opacity" style="margin-top: 0px;">SEND OTP</button>
        </form>
        <div class="register-forget opacity">
          <a href="Login" aria-label="Go back to login">BACK TO LOGIN</a>
        </div>
      </div>
      <div class="circle circle-two"></div>
    </div>
    <div class="theme-btn-container" role="radiogroup" aria-label="Theme selection"></div>
  </section>
  <script src="@Url.Content("/js/Auth/ForgotPassword.js")" asp-append-version="true"></script>
</body>

</html>