@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FitPro Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link href="https://kendo.cdn.telerik.com/themes/6.7.0/default/default-main.css" rel="stylesheet">
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/kendo.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/Instructor/Dashboard.css")" asp-append-version="true">
    <link rel="stylesheet" href="@Url.Content("~/css/Instructor/CreateClasses.css")" asp-append-version="true">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    <div class="header">
        <div class="logo-container">
            <a href="#" class="logo">
                <img src="~/logo/fitProLogo.png" alt="">
            </a>
        </div>

        <div class="user-profile-container">
            <div class="user-profile">
                <div class="user-avatar">
                    <img id="userImage" src="" alt="Avatar"
                        style="display: none; width: 40px; height: 40px; border-radius: 50%;" />
                    <div id="userInitials" class="user-initials">DU</div>
                </div>
                <div class="user-name" id="userName">Default User</div>
            </div>
            <div class="profile-dropdown">
                <a href="#" onclick="showProfileDrawer()">Update Profile</a>
                <a href="#" onclick="showLogoutConfirmation()">Logout</a>
            </div>
        </div>
    </div>

    <div id="mainTabstrip">
        <ul>
            <li class="k-active">Dashboard</li>
            <li>Create Classes</li>
            <li>Manage Schedule</li>
            <li>Feedback</li>
        </ul>
        <div>
            <div class="content-area">
                <div class="container-fluid dashboard-content">
                    <div class="row g-0 w-100">
                        <div class="col-md-4 mb-4">
                            <div class="card dashboard-card h-100 mx-2">
                                <div class="card-body">
                                    <h5 class="card-title">Class Overview</h5>
                                    <div class="row">
                                        <div class="col-6 text-center">
                                            <div class="stat-value" id="totalClassesCount">Loading...</div>
                                            <small>Total Classes</small>
                                        </div>
                                        <div class="col-6 text-center">
                                            <div class="stat-value" id="upcomingClassesCount">Loading...</div>
                                            <small>Upcoming Classes</small>
                                        </div>
                                    </div>
                                    <canvas id="classTypeChart" style="max-height: 250px;"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-4">
                            <div class="card dashboard-card h-100 mx-2">
                                <div class="card-body">
                                    <h5 class="card-title">User Engagement</h5>
                                    <div class="row">
                                        <div class="col-6 text-center">
                                            <div class="stat-value" id="totalStudentsCount">Loading...</div>
                                            <small>Total Users</small>
                                        </div>
                                        <div class="col-6 text-center">
                                            <div class="stat-value" id="retentionRate">Loading...</div>
                                            <small>Retention Rate</small>
                                        </div>
                                    </div>
                                    <canvas id="studentEngagementChart" class="mt-3"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-4">
                            <div class="card dashboard-card h-100 mx-2">
                                <div class="card-body">
                                    <h5 class="card-title">Revenue & Performance</h5>
                                    <div class="row">
                                        <div class="col-6 text-center">
                                            <div class="stat-value">$4,250</div>
                                            <small>Total Revenue</small>
                                        </div>
                                        <div class="col-6 text-center">
                                            <div class="stat-value">4.8</div>
                                            <small>Average Rating</small>
                                        </div>
                                    </div>
                                    <canvas id="revenueChart" class="mt-3"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8 mb-4">
                            <div class="card dashboard-card mx-2">
                                <div class="card-body">
                                    <h5 class="card-title">Upcoming Classes</h5>
                                    <div class="table-responsive">
                                        <table class="table table-dark table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Class Name</th>
                                                    <th>Date</th>
                                                    <th>Time</th>
                                                    <th>Students</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody id="upcomingClassesTableBody">
                                                <tr>
                                                    <td colspan="5" class="text-center">Loading...</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-4">
                            <div class="card dashboard-card mx-2">
                                <div class="card-body">
                                    <h5 class="card-title">Quick Actions</h5>
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-primary mb-2">Create New Class</button>
                                        <button class="btn btn-primary mb-2">Manage Schedule</button>
                                        <button class="btn btn-primary mb-2">View Student Feedback</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="content-area">
                <div class="container mt-1">
                    <h2 class="text-center mb-4">Create Classes</h2>
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <input type="text" id="searchText" class="form-control" style="color: white;"
                                placeholder="Search by class name or city">
                        </div>
                        <div class="col-md-3">
                            <select id="type" class="form-control transparent-select">
                                <option value="">All Types</option>
                                <option value="In-Person">In-Person</option>
                                <option value="Online">Online</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="level" class="form-control transparent-select">
                                <option value="">All Levels</option>
                                <option value="Beginner">Beginner</option>
                                <option value="Intermediate">Intermediate</option>
                                <option value="Advanced">Advanced</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" id="filterBtn">Apply Filters</button>
                        </div>
                    </div>
                    <div id="classList" class="row"></div>
                </div>
            </div>
        </div>
        <div>
            <div class="content-area">
                <div class="container">
                    <h2>Manage Schedule</h2>
                    <p>This would be the schedule management section.</p>
                </div>
            </div>
        </div>
        <div>
            <div class="content-area">
                <div class="container">
                    <h2>Feedback</h2>
                    <p>This would be the feedback section.</p>
                </div>
            </div>
        </div>
    </div>

    <div id="profileDrawer"></div>
    <div id="logoutDialog"></div>
    <div id="classDetailsPopup" class="class-details-popup">
        <div class="class-details-content">
            <button class="close-popup">×</button>
            <h3 class="mb-4">Class Details</h3>
            <div class="class-details-grid" id="classDetailsContent"></div>
        </div>
    </div>

    <script src="@Url.Content("~/js/Instructor/Dashboard.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/Instructor/CreateClasses.js")" asp-append-version="true"></script>
</body>

</html>
