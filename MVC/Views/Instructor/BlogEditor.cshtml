                                } else if (Array.isArray(blog.labels)) {
                                    tags = [...blog.labels];
                                }
                                renderTags();
                            }

                            // Set the thumbnail preview if available
                            if (blog.thumbnailUrl) {
                                thumbnailData = blog.thumbnailUrl; // Store URL for reference
