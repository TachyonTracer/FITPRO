                                                type: 'POST',
                                                data: formData,
                                                processData: false,
                                                contentType: false,
                                                success: function (response) {

                                                    // Assuming response returns { imageUrl: "/uploads/xyz.jpg" }
                                                    var imageUrl = response.path;

                                                    // Create the image element with the returned URL
