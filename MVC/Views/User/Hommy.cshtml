            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(250, 204, 21, 0.1);
        }

        .card h3 {
            font-size: 20px;
            margin: 0 0 10px;
            color: #fff;
        }

        .card p {
            font-size: 14px;
            color: #ccc;
        }

        .highlight {
            background-color: #facc15;
            font-weight: 400;
            color: #0f0f0f;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 40px;
        }

        .highlight strong {
            font-size: 16px;
        }

        .recommendation {
            background-color: #1e1e1e;
            box-shadow: 0 0 10px rgba(250, 204, 21, 0.1);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
        }

        .recommendation h3 {
            margin-bottom: 10px;
        }

        .recommendation-list {
            display: flex;
            gap: 20px;
            overflow-x: auto;
        }

        .recommendation-item {
            background-color: #292929;
            border-radius: 10px;
            overflow: hidden;
            width: 220px;
            min-width: 220px;
            box-shadow: 0 0 8px rgba(250, 204, 21, 0.1);
        }

        .recommendation-item img {
            width: 100%;
            height: 120px;
            object-fit: cover;
        }

        .recommendation-info {
            padding: 10px 15px;
        }

        .recommendation-info h4 {
            color: #fff;
            margin: 0 0 5px;
            font-size: 16px;
        }

        .recommendation-info p {
            font-size: 12px;
            color: #ccc;
            margin: 2px 0;
