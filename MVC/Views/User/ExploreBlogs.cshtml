            // Try to fetch actual data first
            fetchAllBlogs();
        });

        function fetchAllBlogs() {
            $.ajax({
                url: `http://localhost:8080/api/Blog/GetBlogsForUser`,
                type: 'GET',
                headers: {
                    'Authorization': token ? `Bearer ${token}` : '',
                    'Content-Type': 'application/json'
                },
                success: function (data) {
                    if (data && data.success && data.data && data.data.entries.length > 0) {
                        allBlogs = data.data.entries.map(entry => ({
                            id: entry.c_blog_id,
                            authorId: entry.c_blog_author_id,
                            title: entry.c_title,
                            description: entry.c_desc,
                            content: entry.c_content,
                            thumbnailUrl: !entry.c_thumbnail || entry.c_thumbnail.includes('default')
                                ? 'http://localhost:8081/blogImages/Thumbnails/default.png'
                                : `http://localhost:8081/blogImages/Thumbnails/${entry.c_blog_id}/${entry.c_thumbnail}`,
                            tags: entry.c_tags ? entry.c_tags.split(",") : [],
                            views: entry.c_views || 0,
                            likes: entry.c_likes || 0,
                            comments: entry.c_comments || 0,
                            is_completed: entry.c_is_published || 0,
                            createdAt: entry.c_created_at,
                            sourceUrl: 'http://localhost:8081/Blog/blogpost/' + entry.c_source_url
                        }));
                        filteredBlogs = [...allBlogs];
                        sortBlogs(currentSort);
                        renderBlogs();
                    } else {
                        useSampleData();
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching blogs:', error);
                    // On error, fall back to sample data
                    useSampleData();
                },
                timeout: 5000 // 5 second timeout
            });
        }

        function fetchBookmarkedBlogs() {
            if (!USER_ID) {
                showError("Please log in to view your bookmarked blogs.");
                return;
            }

            $("#blog-list").html('<div class="loader"><i class="fas fa-spinner"></i></div>');

            $.ajax({
                url: `http://localhost:8080/api/Blog/fetchBookmarkedBlogsForUser?user_id=${USER_ID}`,
                type: 'POST',
                headers: {
                    'Authorization': token ? `Bearer ${token}` : '',
                    'Content-Type': 'application/json'
                },
                success: function (data) {
                    if (data && data.success && data.data && data.data.entries && data.data.entries.length > 0) {
                        const bookmarkedBlogs = data.data.entries.map(entry => ({
                            id: entry.c_blog_id,
                            authorId: entry.c_blog_author_id,
                            title: entry.c_title,
                            description: entry.c_desc,
                            content: entry.c_content,
                            thumbnailUrl: !entry.c_thumbnail || entry.c_thumbnail.includes('default')
                                ? 'http://localhost:8081/blogImages/Thumbnails/default.png'
                                : `http://localhost:8081/blogImages/Thumbnails/${entry.c_blog_id}/${entry.c_thumbnail}`,
                            tags: entry.c_tags ? entry.c_tags.split(",") : [],
                            views: entry.c_views || 0,
                            likes: entry.c_likes || 0,
                            comments: entry.c_comments || 0,
                            is_completed: entry.c_is_published || 0,
                            createdAt: entry.c_created_at,
                            sourceUrl: 'http://localhost:8081/Blog/blogpost/' + entry.c_source_url
                        }));

                        filteredBlogs = bookmarkedBlogs;
                        renderBlogs();
                    } else {
                        // Show the specific message from the API when there are no bookmarks
                        const message = data.message || "You haven't added any blogs to your bookmark list.";
                        $("#blog-list").html(`<div class="no-blogs">${message}</div>`);
                    }
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseJSON['message']);
                     if (xhr.responseJSON['message']) 
                       {
                            showError(xhr.responseJSON['message']);
                       }
                       else{

                    showError("Failed to fetch bookmarked blogs. Please try again later.");
                       }

                }
            });
        }

        function useSampleData() {
            console.log('Using sample blog data');
            allBlogs = sampleBlogs;
            filteredBlogs = [...allBlogs];
            sortBlogs(currentSort);
            renderBlogs();
        }

        function showError(message) {
            $("#blog-list").html(`<div class="no-blogs">${message}</div>`);
        }

        function renderBlogs() {
            const blogListElement = $("#blog-list");
            blogListElement.empty();

            if (filteredBlogs.length === 0) {
                // Use the updated no-blogs style
                blogListElement.html('<div class="no-blogs">No blogs found matching your criteria.</div>');
                return;
            }

            filteredBlogs.forEach(blog => {
                // Only show published blogs to users
                if (blog.is_completed) {
                    const blogCard = $('<div>')
                        .addClass('blog-card')
                        // Add data attribute for URL to make card clickable
                        .attr('data-url', blog.sourceUrl);

                    blogCard.html(`
                        <img src="${blog.thumbnailUrl || '/images/default-blog.jpg'}" alt="${blog.title}" class="blog-thumbnail">
                        <div class="blog-details">
                            <div>
                                <h3 class="blog-title">${blog.title}</h3>
                                <p class="blog-description">${blog.description || 'No description provided.'}</p>
                            </div>
                            <div class="blog-stats">
                                <span class="stat" title="Views"><i class="fas fa-eye"></i> ${blog.views || 0}</span>
                                <span class="stat" title="Likes"><i class="fas fa-heart"></i> ${blog.likes || 0}</span>
                                <span class="stat" title="Comments"><i class="fas fa-comment"></i> ${blog.comments || 0}</span>
                                <span class="stat" title="Published Date">
                                    <i class="fas fa-calendar-alt"></i> ${formatDate(blog.createdAt)}
                                </span>
                                <span class="stat copy-link" title="Copy Link" data-url="${blog.sourceUrl}">
                                    <i class="fas fa-link"></i>
                                </span>
                                <div class="blog-actions">
                                    <button class="read-btn" onclick="openBlog('${blog.sourceUrl}', event)">
                                        <i class="fas fa-book-open"></i> Read Article
                                    </button>
                                </div>
                            </div>
                        </div>
                    `);

                    blogListElement.append(blogCard);
                }
            });

            // If all blogs were filtered out because they were drafts
            if (blogListElement.children().length === 0 && allBlogs.length > 0) {
                blogListElement.html('<div class="no-blogs">No published blogs available at the moment. Check back later!</div>');
            } else if (blogListElement.children().length === 0) {
                // Handle case where initial fetch returned no blogs at all
                blogListElement.html('<div class="no-blogs">No blogs have been created yet.</div>');
            }
        }

        // Open blog when clicking the open icon or read button
        function openBlog(url, event) {
            if (event) {
                event.stopPropagation();
            }
            window.open(url, '_blank');
        }

        // Copy blog URL
        $(document).on('click', '.copy-link', function (e) {
            e.stopPropagation();
            const url = $(this).data('url');
            navigator.clipboard.writeText(url).then(() => {
                $(this).attr('title', 'Copied!').tooltip('show');
                setTimeout(() => $(this).attr('title', 'Copy Link'), 1000);
            });
        });

        function formatDate(dateString) {
            if (!dateString) return 'Unknown date';
            const date = new Date(dateString * 1000);
            return date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        function sortBlogs(sortType) {
            currentSort = sortType;

            // Update active button
            $('.sort-btn').removeClass('active');
            $(`.sort-btn[data-sort="${sortType}"]`).addClass('active');

            // Don't refetch if we're just changing sort order
            // We'll sort the current filtered blogs instead

            switch (sortType) {
                case 'latest':
                    filteredBlogs.sort((a, b) => new Date(b.createdAt * 1000) - new Date(a.createdAt * 1000));
                    break;
                case 'oldest':
                    filteredBlogs.sort((a, b) => new Date(a.createdAt * 1000) - new Date(b.createdAt * 1000));
                    break;
                case 'popular':
                    filteredBlogs.sort((a, b) => (b.views || 0) - (a.views || 0));
                    break;
            }
            renderBlogs();
        }

        function setView(viewType) {
            currentView = viewType;

            // Update active button
            $('.view-btn').removeClass('active');
            $(`.view-btn[data-view="${viewType}"]`).addClass('active');

            if (viewType === 'bookmarked') {
                isBookmarkedView = true;
                fetchBookmarkedBlogs();
                return;
            }

            isBookmarkedView = false;

            // If switching back to all blogs, reset to all blogs
            filteredBlogs = [...allBlogs];

            // Apply search filter if any
            const searchTerm = $('#search-input').val().trim();
            if (searchTerm) {
                searchFilter(searchTerm);
            } else {
                // Just apply current sorting
                sortBlogs(currentSort);
            }
        }

        function searchFilter(searchTerm) {
            if (!searchTerm.trim()) {
                // If no search term, just reset to current view
                if (currentView === 'bookmarked') {
                    fetchBookmarkedBlogs();
                } else {
                    filteredBlogs = [...allBlogs];
                    sortBlogs(currentSort);
                }
                return;
            }

            // If in bookmarked view and searching, filter bookmarked blogs locally
            // We don't want to lose the bookmarked state
            searchTerm = searchTerm.toLowerCase();

            if (currentView === 'all') {
                filteredBlogs = allBlogs.filter(blog =>
                    blog.title.toLowerCase().includes(searchTerm) ||
                    (blog.description && blog.description.toLowerCase().includes(searchTerm))
                );
            } else {
                // We're already in bookmarked view, so filter the current filtered blogs
                filteredBlogs = filteredBlogs.filter(blog =>
                    blog.title.toLowerCase().includes(searchTerm) ||
                    (blog.description && blog.description.toLowerCase().includes(searchTerm))
                );
            }

            // Apply current sort to filtered results
            sortBlogs(currentSort);
        }

        function filterBlogs(searchTerm) {
            // Just call searchFilter with the search term
            searchFilter(searchTerm);
        }

        // Event listeners for search and sort
        $(document).on('click', '#search-btn', function () {
            const searchTerm = $('#search-input').val();
            filterBlogs(searchTerm);
        });

        $(document).on('keyup', '#search-input', function (event) {
            if (event.key === 'Enter') {
                const searchTerm = $(this).val();
                filterBlogs(searchTerm);
            }
        });

        $(document).on('click', '.sort-btn', function () {
            sortBlogs($(this).data('sort'));
        });

        $(document).on('click', '.view-btn', function () {
            setView($(this).data('view'));
        });

