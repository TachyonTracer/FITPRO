    <script>
        $(document).ready(function () {
            // Initialize Main Navigation TabStrip
            $("#mainTabstrip").kendoTabStrip({
                animation: {
                    open: {
                        effects: "fadeIn"
                    }
                }
            });

            // Initialize Classes TabStrip
            $("#tabstrip").kendoTabStrip({
                animation: {
                    open: {
                        effects: "fadeIn"
                    }
                }
            });

            // Initialize Profile Drawer
