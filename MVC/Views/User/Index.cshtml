@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FitPro Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link href="https://kendo.cdn.telerik.com/themes/6.7.0/default/default-main.css" rel="stylesheet">
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/kendo.all.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Add SweetAlert2 CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="@Url.Content("~/css/User/Index.css")" asp-append-version="true">
    <script src="@Url.Content("~/js/User/Index.js")" asp-append-version="true"></script>
</head>

<body>
    <!-- Header with Logo -->
    <div class="header">
        <div class="logo-container">
            <a href="#" class="logo">
                <img src="~/fitProLogo.png" alt="">
            </a>
        </div>

        <div class="user-profile-container">
            <div class="user-profile">
                <div class="user-avatar">
                    <img src="" alt="Profile Picture" id="userImage" class="profile-img-rounded">
                </div>
                <div class="user-name"></div>
            </div>
            <div class="profile-dropdown">
                <a href="#" onclick="showProfileDrawer()">Update Profile</a>
                <a href="#" onclick="showLogoutConfirmation()">Logout</a>
            </div>
        </div>
    </div>

    <!-- Main Navigation TabStrip -->
    <div id="mainTabstrip">
        <ul>
            <li class="k-active">All Classes</li>
            <li>My Classes</li>
            <li>Progress</li>
            <li>Health</li>
            <li>Settings</li>
        </ul>
        <div>
            <!-- Dashboard Content -->
            <div class="content-area">
                <!-- Background elements -->
                <div class="circle circle-1"></div>
                <div class="circle circle-2"></div>

                <div class="container mt-1">
                    <h2 class="text-center mb-4">FitPro Classes</h2>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <input type="text" id="searchText" class="form-control" style="color: white;"
                                placeholder="Search by class name or city">
                        </div>
                        <div class="col-md-3">
                            <select id="type" class="form-control transparent-select">
                                <option value="">All Types</option>
                                <option value="In-Person">In-Person</option>
                                <option value="Online">Online</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="level" class="form-control transparent-select">
                                <option value="">All Levels</option>
                                <option value="Beginner">Beginner</option>
                                <option value="Intermediate">Intermediate</option>
                                <option value="Advanced">Advanced</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" id="filterBtn">Apply Filters</button>
                        </div>
                    </div>

                    <div id="classList" class="row">

                        <!-- Available classes will be dynamically added here -->
                    </div>
                </div>
            </div>
        </div>
        <div>
            <!-- Classes Content -->
            <div class="content-area">
                <div class="container" id="myClasses">
                    <h2>Classes Content-></h2>
                    <p>This would be the classes management section.</p>
                </div>
            </div>
        </div>
        <div>
            <!-- Progress Content -->
            <div class="content-area">
                <div class="container">
                    <h2>Progress Tracking</h2>
                    <p>This would be the progress tracking section.</p>
                </div>
            </div>
        </div>
        <div>
            <!-- Health Content -->
            <div class="content-area">
                <div class="container">
                    <h2>Health Metrics</h2>
                    <p>This would be the health metrics section.</p>
                </div>
            </div>
        </div>
        <div>
            <!-- Settings Content -->
            <div class="content-area">
                <div class="container">
                    <h2>Settings</h2>
                    <p>This would be the settings section.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Kendo Drawer for Update Profile -->
    <div id="profileDrawer"></div>

    <!-- Logout Confirmation Dialog -->
    <div id="logoutDialog"></div>

</body>

</html>