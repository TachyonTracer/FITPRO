@{
    ViewData["Title"] = "User";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Overview</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.1.425/js/kendo.all.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Bebas+Neue&display=swap" rel="stylesheet">
    <style>
        :root {
            --background: #1a1a2e;
            --color: #ffffff;
            --primary-color: #ff4d4d;
            --glass-color: rgba(255, 255, 255, 0.1);
            --success-color: #28a745;
            --danger-color: #dc3545;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: "Poppins", sans-serif;
            background: var(--background);
            color: var(--color);
            letter-spacing: 1px;
            transition: background 0.3s ease;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        a {
            text-decoration: none;
            color: var(--color);
            transition: color 0.3s ease;
        }

        a:hover {
            color: var(--primary-color);
        }

        h1 {
            font-family: "Bebas Neue", sans-serif;
            font-size: 3rem;
            text-align: center;
            margin-bottom: 0.5rem;
            letter-spacing: 2px;
        }

        /* Navbar Styles */
        .navbar {
            background: var(--glass-color);
            backdrop-filter: blur(15px);
            border-bottom: 1px solid hsla(0, 0%, 65%, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        .navbar-brand {
            font-family: "Bebas Neue", sans-serif;
            font-size: 1.5rem;
            letter-spacing: 2px;
            color: var(--primary-color);
        }

        .navbar-nav .nav-link {
            color: var(--color);
            font-weight: 500;
            letter-spacing: 1px;
            transition: color 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            color: var(--primary-color);
        }

        /* Main Content */
        .main-content {
            margin-top: 70px; /* Adjust based on navbar height */
            padding: 1rem;
            position: relative;
            z-index: 1;
            min-height: calc(100vh - 70px);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .gym-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .gym-icon {
            position: absolute;
            width: 50px;
            height: 50px;
            background-size: contain;
            background-repeat: no-repeat;
            opacity: 0.4;
            animation: float-icon 6s ease-in-out infinite;
        }

        /* Dumbbell Icon */
        .dumbbell-icon-1, .dumbbell-icon-2 {
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"><rect x="2" y="9" width="4" height="6" /><rect x="18" y="9" width="4" height="6" /><line x1="6" y1="12" x2="18" y2="12" /></svg>');
        }

        .dumbbell-icon-1 {
            top: 10%;
            left: 15%;
            animation-delay: 0s;
        }

        .dumbbell-icon-2 {
            bottom: 20%;
            right: 10%;
            animation-delay: 1s;
        }

        /* Barbell Icon */
        .barbell-icon-1, .barbell-icon-2 {
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"><rect x="1" y="7" width="4" height="10" /><rect x="19" y="7" width="4" height="10" /><rect x="7" y="9" width="4" height="6" /><rect x="13" y="9" width="4" height="6" /><line x1="5" y1="12" x2="19" y2="12" /></svg>');
        }

        .barbell-icon-1 {
            top: 20%;
            right: 20%;
            animation-delay: 0.5s;
        }

        .barbell-icon-2 {
            bottom: 15%;
            left: 20%;
            animation-delay: 1.5s;
        }

        /* Kettlebell Icon */
        .kettlebell-icon-1, .kettlebell-icon-2 {
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"><path d="M9 3h6v3h-6z" /><path d="M12 6c-3 0-5 2-5 5v6h10v-6c0-3-2-5-5-5z" /></svg>');
        }

        .kettlebell-icon-1 {
            top: 30%;
            left: 10%;
            animation-delay: 1s;
        }

        .kettlebell-icon-2 {
            bottom: 25%;
            right: 15%;
            animation-delay: 2s;
        }

        .names-list {
            max-height: 70vh;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: var(--primary-color) var(--glass-color);
        }

        .names-list::-webkit-scrollbar {
            width: 8px;
        }

        .names-list::-webkit-scrollbar-track {
            background: var(--glass-color);
            border-radius: 10px;
        }

        .names-list::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }

        .names-list::-webkit-scrollbar-thumb:hover {
            background: #e04343;
        }

        .names-list .list-group-item {
            cursor: pointer;
            transition: background-color 0.3s ease, border-left-color 0.3s ease;
            border-left: 3px solid transparent;
            background: var(--glass-color);
            color: var(--color);
            backdrop-filter: blur(5px);
            border-radius: 8px;
            margin-bottom: 5px;
            padding: 14px;
            font-weight: 500;
            letter-spacing: 0.8px;
            font-size: 16px;
        }

        .names-list .list-group-item:hover,
        .names-list .list-group-item.active {
            background-color: rgba(255, 255, 255, 0.2);
            border-left-color: var(--primary-color);
            font-weight: 600;
            transform: scale(1.02);
        }

        .details-card {
            background: var(--glass-color);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            padding: 25px;
            transition: box-shadow 0.3s ease;
            backdrop-filter: blur(15px);
            border: 1px solid hsla(0, 0%, 65%, 0.2);
            animation: fadeIn 1s ease-out;
        }

        .details-card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
            transform: scale(1.01);
        }

        .details-section {
            margin-bottom: 20px;
        }

        .details-section h5 {
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 10px;
            margin-bottom: 15px;
            color: var(--primary-color);
            font-size: 1.25rem;
            font-family: "Bebas Neue", sans-serif;
            letter-spacing: 2px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .detail-item strong {
            width: 150px;
            color: rgba(255, 255, 255, 0.7);
            margin-right: 15px;
            font-weight: 500;
        }

        .detail-item span {
            flex: 1;
            font-weight: 400;
        }

        .btn-success {
            background-color: var(--success-color);
            border: none;
            padding: 14px;
            border-radius: 8px;
            font-size: 18px;
            letter-spacing: 1.5px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.03);
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
        }

        .btn-danger {
            background-color: var(--danger-color);
            border: none;
            padding: 14px;
            border-radius: 8px;
            font-size: 18px;
            letter-spacing: 1.5px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c82333;
            transform: scale(1.03);
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
        }

        .bg-light {
            background: var(--glass-color) !important;
            backdrop-filter: blur(15px);
            border: 1px solid hsla(0, 0%, 65%, 0.2);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .text-primary {
            color: var(--primary-color) !important;
            font-family: "Bebas Neue", sans-serif;
            letter-spacing: 2px;
        }

        .text-muted {
            color: rgba(255, 255, 255, 0.7) !important;
        }

        .text-secondary {
            color: rgba(255, 255, 255, 0.5) !important;
            font-style: italic;
        }

        /* SweetAlert2 Styles */
        .swal2-popup {
            background: var(--glass-color) !important;
            backdrop-filter: blur(15px) !important;
            border: 1px solid hsla(0, 0%, 65%, 0.2) !important;
            border-radius: 15px !important;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3) !important;
            color: var(--color) !important;
        }

        .swal2-title {
            color: var(--color) !important;
            font-family: "Poppins", sans-serif !important;
            letter-spacing: 1px !important;
        }

        .swal2-content {
            color: rgba(255, 255, 255, 0.8) !important;
            font-family: "Poppins", sans-serif !important;
        }

        .swal2-confirm {
            background-color: var(--success-color) !important;
            color: var(--color) !important;
            border: none !important;
            border-radius: 8px !important;
            font-family: "Poppins", sans-serif !important;
            transition: all 0.3s ease !important;
        }

        .swal2-confirm:hover {
            background-color: #218838 !important;
            transform: scale(1.03) !important;
        }

        .swal2-cancel {
            background-color: rgba(255, 255, 255, 0.1) !important;
            color: var(--color) !important;
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
            border-radius: 8px !important;
            font-family: "Poppins", sans-serif !important;
            transition: all 0.3s ease !important;
        }

        .swal2-cancel:hover {
            background-color: rgba(255, 255, 255, 0.2) !important;
            transform: scale(1.03) !important;
        }

        .swal2-icon.swal2-warning {
            color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }

        .swal2-icon.swal2-success {
            border-color: var(--success-color) !important;
        }

        .swal2-icon.swal2-success .swal2-success-ring {
            border-color: var(--success-color) !important;
        }

        .swal2-icon.swal2-success [class^='swal2-success-line'] {
            background-color: var(--success-color) !important;
        }

        /* Profile Image Styling */
        .profile-image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid var(--primary-color);
            transition: all 0.3s ease;
            animation: lift 2s ease-in-out infinite;
        }

        .profile-image:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }

        .personal-info-row {
            display: flex;
            align-items: center;
            min-height: 180px;
        }

        .personal-info-details {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .personal-info-column {
            flex: 1;
            min-width: 200px;
        }

        .circle {
            width: 8rem;
            height: 8rem;
            background: var(--primary-color);
            border-radius: 50%;
            position: absolute;
            opacity: 0.8;
        }

        .circle-one {
            top: 0;
            left: 0;
            z-index: -1;
            transform: translate(-45%, -45%);
            animation: float 4s ease-in-out infinite;
        }

        .circle-two {
            bottom: 0;
            right: 0;
            z-index: -1;
            transform: translate(45%, 45%);
            animation: float-two 4s ease-in-out infinite;
            animation-delay: 0.5s;
        }

        /* Animations */
        @@keyframes float {
            0% { transform: translate(-45%, -45%) translateY(0); }
            50% { transform: translate(-45%, -45%) translateY(-15px); }
            100% { transform: translate(-45%, -45%) translateY(0); }
        }

        @@keyframes float-two {
            0% { transform: translate(45%, 45%) translateY(0); }
            50% { transform: translate(45%, 45%) translateY(-15px); }
            100% { transform: translate(45%, 45%) translateY(0); }
        }

        @@keyframes fadeIn {
            0% { opacity: 0; transform: translateY(20px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        @@keyframes lift {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-10px) rotate(2deg); }
        }

        @@keyframes float-icon {
            0%, 100% {
                transform: translateY(0);
                opacity: 0.1;
            }
            50% {
                transform: translateY(-20px);
                opacity: 0.2;
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .profile-image {
                width: 120px;
                height: 120px;
            }

            .details-section h5 {
                font-size: 1.1rem;
            }

            .detail-item strong {
                width: 120px;
            }

            .names-list {
                max-height: 50vh;
            }

            .gym-icon {
                width: 40px;
                height: 40px;
            }
        }

        @@media (max-width: 480px) {
            .profile-image {
                width: 100px;
                height: 100px;
            }

            .details-section h5 {
                font-size: 1rem;
            }

            .detail-item strong {
                width: 100px;
            }

            .names-list {
                max-height: 40vh;
            }

            .gym-icon {
                width: 30px;
                height: 30px;
            }

            .btn-success, .btn-danger {
                font-size: 16px;
                padding: 10px;
            }
        }
    </style>
</head>

<body>
   
    

    <!-- Main Content -->
    <div class="main-content">
        <div class="gym-background">
            <div class="gym-icon dumbbell-icon-1"></div>
            <div class="gym-icon dumbbell-icon-2"></div>
            <div class="gym-icon barbell-icon-1"></div>
            <div class="gym-icon barbell-icon-2"></div>
            <div class="gym-icon kettlebell-icon-1"></div>
            <div class="gym-icon kettlebell-icon-2"></div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <!-- Left Panel (25%) - User Names -->
                <div class="col-md-3 p-3 bg-light">
                    <h5 class="text-primary mb-3">Users</h5>
                    <div class="names-list">
                        <ul class="list-group" id="names"></ul>
                    </div>
                </div>

                <!-- Right Panel (75%) - User Details -->
                <div class="col-md-9 p-4 position-relative">
                    <div class="circle circle-one"></div>
                    <div class="circle circle-two"></div>
                    <div id="default-message" class="text-center text-muted mt-5">
                        <h1>Select a User</h1>
                        <p class="text-secondary">Choose a name from the list to see more information</p>
                    </div>
                    <div id="details" class="d-none details-card">
                        <!-- Personal Information Section -->
                        <div class="details-section">
                            <h5>Personal Information</h5>
                            <div class="row personal-info-row">
                                <div class="col-md-8 personal-info-details">
                                    <div class="personal-info-column">
                                        <div class="detail-item"><strong>Name:</strong> <span id="userName"></span></div>
                                        <div class="detail-item"><strong>Email:</strong> <span id="email"></span></div>
                                        <div class="detail-item"><strong>Mobile:</strong> <span id="mobile"></span></div>
                                        <div class="detail-item"><strong>Gender:</strong> <span id="gender"></span></div>
                                        <div class="detail-item"><strong>Date of Birth:</strong> <span id="dob"></span></div>
                                        <div class="detail-item"><strong>Status:</strong> <span id="status"></span></div>
                                        <div class="detail-item"><strong>Activated On:</strong> <span id="activatedOn"></span></div>
                                    </div>
                                </div>
                                <div class="col-md-4 profile-image-container">
                                    <img id="profile-image" class="profile-image" src="" alt="Profile Image" onerror="handleImageError(this)">
                                </div>
                            </div>
                        </div>

                        <!-- Health Information Section -->
                        <div class="details-section">
                            <h5>Health Information</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-item"><strong>Height:</strong> <span id="height"></span></div>
                                    <div class="detail-item"><strong>Weight:</strong> <span id="weight"></span></div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-item"><strong>Goal:</strong> <span id="goal"></span></div>
                                    <div class="detail-item"><strong>Medical Condition:</strong> <span id="medicalCondition"></span></div>
                                </div>
                            </div>
                        </div>

                        <!-- Account Status Section -->
                        <div class="details-section">
                            <h5>Account Status</h5>
                            <div class="d-flex gap-3">
                                <button id="activate-btn" class="btn btn-success" onclick="activateUser()">Activate</button>
                                <button id="deactivate-btn" class="btn btn-danger" onclick="deactivateUser()">Deactivate</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const apiBaseUrl = "http://localhost:8080/api/User/";
        let currentUserId = null;

        // Function to handle image load error
        function handleImageError(img) {
            img.src = '/images/placeholder.jpg'; // Local fallback image
            img.onerror = null; // Prevent infinite loop
        }

        // Load User List
        function loadUserList() {
            $.ajax({
                url: `${apiBaseUrl}GetAllUsers`,
                method: "GET",
                success: function (response) {
                    let html = response.data.map(user => `
                        <li class="list-group-item" data-id="${user.userId}" onclick="selectUser(${user.userId})">
                            ${user.userName}
                        </li>
                    `).join('');
                    $('#names').html(html);
                },
                error: function () {
                    console.error("Error loading users.");
                }
            });
        }

        // Select User and Show Details
        function selectUser(userId) {
            $.ajax({
                url: `${apiBaseUrl}GetOneUser/${userId}`,
                method: "GET",
                success: function (response) {
                    const user = response.data;
                    currentUserId = userId;

                    $('#names .list-group-item').removeClass('active');
                    $(`#names .list-group-item[data-id='${userId}']`).addClass('active');

                    $('#default-message').addClass('d-none');
                    $('#details').removeClass('d-none');

                    // Populate user details
                    $('#userName').text(user.userName || 'N/A');
                    $('#email').text(user.email || 'N/A');
                    $('#mobile').text(user.mobile || 'N/A');
                    $('#gender').text(user.gender || 'N/A');
                    $('#dob').text(user.dob ? new Date(user.dob).toLocaleDateString() : 'N/A');
                    $('#status').text(user.status ? 'Active' : 'Inactive');
                    $('#activatedOn').text(user.activatedOn ? new Date(user.activatedOn).toLocaleString() : 'N/A');
                    $('#height').text(user.height ? `${user.height} cm` : 'N/A');
                    $('#weight').text(user.weight ? `${user.weight} kg` : 'N/A');
                    $('#goal').text(user.goal || 'N/A');
                    $('#medicalCondition').text(user.medicalCondition || 'N/A');

                    // Set profile image
                    const profileImage = $('#profile-image');
                    if (user.profileImage) {
                        profileImage.attr('src', `/${user.profileImage}`);
                    } else {
                        profileImage.attr('src', '/images/placeholder.jpg');
                        profileImage[0].onerror = null;
                    }
                },
                error: function () {
                    console.error("Error fetching user details.");
                }
            });
        }

        // Activate User with Swal.fire
        function activateUser() {
            if (!currentUserId) {
                Swal.fire("Error", "Please select a user first.", "error");
                return;
            }

            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to activate this user?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, Activate",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `${apiBaseUrl}UserActivate/${currentUserId}`,
                        type: "POST",
                        success: function (response) {
                            Swal.fire({
                                title: "Success",
                                text: "User activated successfully!",
                                icon: "success",
                                confirmButtonText: "OK"
                            }).then(() => {
                                loadUserList();
                            });
                        },
                        error: function () {
                            Swal.fire({
                                title: "Error",
                                text: "Failed to activate user.",
                                icon: "error",
                                confirmButtonText: "OK"
                            });
                        }
                    });
                }
            });
        }

        // Deactivate User with Swal.fire
        function deactivateUser() {
            if (!currentUserId) {
                Swal.fire("Error", "Please select a user first.", "error");
                return;
            }

            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to deactivate this user?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, Deactivate",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `${apiBaseUrl}UserDeactivate/${currentUserId}`,
                        type: "POST",
                        success: function (response) {
                            Swal.fire({
                                title: "Success",
                                text: "User deactivated successfully!",
                                icon: "success",
                                confirmButtonText: "OK"
                            }).then(() => {
                                loadUserList();
                            });
                        },
                        error: function () {
                            Swal.fire({
                                title: "Error",
                                text: "Failed to deactivate user.",
                                icon: "error",
                                confirmButtonText: "OK"
                            });
                        }
                    });
                }
            });
        }

        // Load user list on page load
        $(document).ready(function () {
            loadUserList();
        });
    </script>
</body>

</html>